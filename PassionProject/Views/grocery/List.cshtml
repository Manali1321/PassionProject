@model IEnumerable<PassionProject.Models.GroceryDto>
@{
    ViewBag.Title = "List";
}


<style>
    table {
        margin: 20px 0;
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: lightgray;
        font-weight: bold;
    }

    .btn {
        background-color: lightgray;
        color: black !important;
        padding: 10px 20px;
        margin-bottom: 20px;
        font-weight: 700;
        border-radius: 5px;
        font-size: 16px;
    }
</style>

<h2>List of Grocery</h2>
<button class="btn"><a href="/grocery/new">Create New Grocery Item</a></button>

<table>
    <thead>
        <tr>
            <th>UPC</th>
            <th>Product name</th>
            <th>Weight (gram)</th>
            <th>Stock</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var grocery in Model)
        {
            <tr>
                <td><a href="/Grocery/Details/@grocery.ProductId">@grocery.Upc</a></td>
                <td>@grocery.Name</td>
                <td>@grocery.Weight</td>
                <td>@grocery.Stock</td>
            </tr>
        }
    </tbody>
</table>

