@model PassionProject.Models.GroceryDto
@{
    ViewBag.Title = "DeleteConfirm";
}
<style>
    .btn {
        background-color: lightgray;
        color: black !important;
        padding: 10px 20px;
        margin-bottom: 20px;
        font-weight: 700;
        border-radius: 5px;
        font-size: 16px;
    }
</style>
<h2>Do you want to remove this grocery???</h2>
<button><a href="/Grocery/List">Cancel</a></button>
<h3>Name: @Model.Name</h3>
<p>UPC: @Model.Upc</p>
<h4>Quantity:@Model.Stock </h4>
<form action="/Grocery/Delete/@Model.ProductId" method="POST">
    <input type="submit" value="Confirm Delete" />
</form>
