@model PassionProject.Models.ViewModels.MyViewModel
@{
    ViewBag.Title = "New";
}
<style>
    form {
        margin: 20px 0;
        padding: 20px;
        background-color: lightgray;
        border: 1px solid black;
    }

    label {
        display: inline-block;
        width: 100px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    input[type="number"],
    select {
        padding: 5px;
        font-size: 16px;
        border-radius: 5px;
        border: none;
        margin-bottom: 10px;
        width: 200px;
    }

    input[type="submit"] {
        background-color: gray;
        color: white;
        padding: 10px 20px;
        margin-top: 20px;
        border-radius: 5px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
    }

</style>

<h2>Create New order</h2>
<form action="/Order/Create" method="POST">
    <div>
        <label>Order Number:</label>
        <input type="number" name="OrderNumber" />
    </div>
    <div>
        <label>Quantity:</label>
        <input type="number" name="Quantity" />
    </div>
    <div>
        <label>StoreId:</label>
        <select name="StoreId">
            @foreach (var store in @Model.StoreOptions)
            {
                <option value="@store.StoreID">@store.Name</option>

            }
        </select>
    </div>
    <div>
        <label>ProductID:</label>
        <select name="ProductID">
            @foreach (var grocery in @Model.GroceryOptions)
            {
                <option value="@grocery.ProductId">@grocery.Name</option>

            }
        </select>
    </div>
    <div>
        <input type="submit" value="Add Order" />

    </div>
</form>

