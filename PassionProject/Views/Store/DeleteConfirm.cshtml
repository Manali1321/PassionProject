@model PassionProject.Models.StoreDto
@{
    ViewBag.Title = "DeleteConfirm";
}
<style>
    .btn {
        background-color: lightgray;
        color: black !important;
        padding: 10px 20px;
        margin-bottom: 20px;
        font-weight: 700;
        border-radius: 5px;
        font-size: 16px;
    }
</style>
<h2>Are you sure you want to delete this Store?</h2>
<button class="btn"><a href="/Store/List">Cancel</a></button>
<h2>Name of store: @Model.Name</h2>

<form action="/Store/Delete/@Model.StoreID" method="POST">
    <input type="submit" value="Confirm Delete" />
</form>
